package com.techprimers.lazy;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
@RequestMapping("/serviceone")
public class ServiceOneController {

    @Autowired
    GreetService greetService;

    @GetMapping
    public String greet() {
        return greetService.greet();
    }
}

package com.techprimers.lazy;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication
public class SpringBootLazyInitExampleApplication {

	public static void main(String[] args) {
		SpringApplication.run(SpringBootLazyInitExampleApplication.class, args);
	}

}

package com.techprimers.lazy;

import java.util.Date;

import org.springframework.stereotype.Service;

@Service
public class GreetService {

    public GreetService() {
        System.out.println("Service:: Constructor loaded");
    }

    public String greet() {
        return "hello how are youuuuu \r\n   :    "+ new Date().toString();
    }
}
